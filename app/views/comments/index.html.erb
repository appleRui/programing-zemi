<h1>コメント一覧ページ</h1>
<div class="row">
    <div class="col-md-4">
    <p><strong>投稿内容</strong></p>
    <p><%= @tweet.content %></p>
    <p><strong>コメント内容</strong></p>
    <%= form_for @comment, url:tweet_comments_path do |f| %>
    <div class="field">
        <%= f.text_area :content, placeholder: "こんにちは" %>
    </div>
    <%= f.submit "投稿", class: "btn btn-primary" %>
    <% end %>
    </div>
    <div class="col-md-8">
        <ol class="comments">
            <% @comments.each do |comment| %>
                <li id="comment-<%= comment.id %>">
                    <span class="content"><%= comment.content %></span>
                    <span class="timestamp">
                        コメント日 <%= time_ago_in_words(comment.created_at) %> 前
                        <% if current_user?(comment.user) %>
                        <%= link_to "削除", tweet_comment_path(comment.tweet_id, comment), method: :delete, data: { confirm: "削除しますか？" } %>
                        <% end %>
                    </span>
                </li>
            <% end %>
        </ol>
    </div>
</div>
